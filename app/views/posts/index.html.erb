<h1>Listing posts</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Title</th>
    <th>Post content</th>
    <th>Last access timestamp</th>
    <th>Posted date</th>
    <th>Category</th>
    <th>Tag</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.post_id %></td>
    <td><%= post.title %></td>
    <td><%= post.post_content %></td>
    <td><%= post.last_access_timestamp %></td>
    <td><%= post.posted_date %></td>
    <td><%= post.category %></td>
    <td><%= post.tag %></td>
    <td><%= post.user %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

