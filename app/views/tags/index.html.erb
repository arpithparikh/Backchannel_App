<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Tag name</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.tag_id %></td>
    <td><%= tag.tag_name %></td>
    <td><%= tag.user %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

